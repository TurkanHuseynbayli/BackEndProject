@model Teacher
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <table class="table table-striped table-light">
        <thead class="thead-light">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">About</th>
                <th scope="col">Experience</th>
                <th scope="col">Degree</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img style="width:150px!important; height:150px!important" src="~/img/teacher/@Model.Image" alt="@Model.Image" /></td>
                <td>@Model.Name</td>
                <td>@Html.Raw(Model.TeacherDetail.About)</td>
                <td>@Model.TeacherDetail.Experience</td>
                <td>@Model.TeacherDetail.Degree</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-success">Go back</a>
    </div>
</div>

