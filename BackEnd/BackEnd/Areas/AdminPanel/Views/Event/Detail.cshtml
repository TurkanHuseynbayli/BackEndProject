@model Event
@{
    ViewData["Title"] = "Detail";
}

<div class="event-details-area blog-area pt-150 pb-140 bg-white p-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img text-center">
                        <img width="450" src="~/img/event/@Model.Image" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.Date.ToString("dd") <span>@Model.Date.ToString("MMM")</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content text-center">
                        <h2>@Model.Title</h2>
                       
                        <p>@Html.Raw(Model.EventDetail.Description)</p>
                        <a asp-action="Index" class="btn btn-behance">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
