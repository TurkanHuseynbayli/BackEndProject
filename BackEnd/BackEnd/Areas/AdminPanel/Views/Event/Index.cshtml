@model List<Event>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">events</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-light">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>


                            <th>
                                Speakers
                            </th>

                            <th>
                                Tags
                            </th>
                            <th>
                                Date
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Event events in Model)
                        {
                            <tr>
                                <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/event/@events.Image" /></td>
                                <td>@events.Title</td>
                                <td>
                                        <ol>
                                            @foreach (Speaker speaker in events.EventDetail.Speaker)
                                            {
                                                <li>@speaker.Name</li>
                                            }
                                        </ol>
                                    <td>
                                        <ol>
                                            @foreach (TagEvent tag in events.TagsEvents)
                                            {
                                                <a asp-action="Index" class="mr-10 mb-10">@tag.Tag.Name</a>
                                            }
                                        </ol>
                                    </td>
                                <td>@events.Date</td>
                                <td>
                                    <a asp-controller="Event" asp-action="Detail" asp-route-id="@events.Id" class="btn btn-outline-dark">
                                        <i class="mdi mdi-information"></i>
                                    </a>
                                    <a asp-controller="Event" asp-action="Update" asp-route-id="@events.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-controller="Event" asp-action="Delete" asp-route-id="@events.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

