@model About
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Settings</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img width="300" src="~/img/about/@Model.Image" /></td>
                <td><h4>@Html.Raw(Model.Title)</h4></td>
                <td>@Html.Raw(Model.Description)</td>
                <td>



                  
                </td>

            </tr>
        </tbody>
    </table>
    <div class="row justify-content-center mt-4">
        <a class="btn btn-pinterest" asp-controller="About" asp-action="Update" asp-route-id="@Model.Id">Update</a>
    </div>
</div>

