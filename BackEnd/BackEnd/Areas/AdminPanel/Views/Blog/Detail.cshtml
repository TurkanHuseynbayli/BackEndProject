@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="blog-details-area pt-150 pb-140 text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="blog-details text-center">
                    <div class="blog-details-img">
                        <img width="700" src="~/img/blog/@Model.Image" alt="blog-details">
                    </div>
                    <div class="blog-details-content mt-5 text-center bg-white p-5">
                        <h2>@Model.Title </h2>
                        <h6>By @Model.Name  /  @Model.DateTime.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i> @Model.Comment</h6>
                        <p>@Html.Raw(Model.Detail.Description)</p>
                        <a class="btn btn btn-secondary" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

