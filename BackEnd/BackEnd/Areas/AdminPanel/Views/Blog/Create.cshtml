@model Blog
@{
    ViewData["Title"] = "Create";
}

<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Title">Title</label>
                        <input required asp-for="@Model.Title" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Title"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Detail.Description">Aboute Description</label>
                        <textarea asp-for="@Model.Detail.Description"> </textarea>
                        <span class="text-danger" asp-validation-for="@Model.Detail.Description"></span>
                    </div>
                    <div class="form-group col-md-4 offset-md-4">
                        <label asp-for="@Model.Name">Name</label>
                        <input required asp-for="@Model.Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                </div>

                <div class="text-center mb-2">
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input asp-for="@Model.Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.DateTime"></label>
                        <input asp-for="@Model.DateTime" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.DateTime"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-info">GO BACK</a>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Detail_Description'))
        .catch(error => {
            console.error(error);
        });
</script>


