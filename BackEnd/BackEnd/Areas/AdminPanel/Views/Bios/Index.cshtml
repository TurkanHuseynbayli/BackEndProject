@model Bio
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped table-light">
    <thead>
        <tr>
          
            <th>Phone 1</th>
            <th>Phone 2</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        <tr>
         
            <td>@Model.Phono1</td>
            <td>@Model.Phone2</td>
            <td>@Model.Address</td>

        </tr>
    </tbody>
</table>

<table class="table table-striped table-light mt-5">
    <thead>
        <tr>
            <th>Logo</th>
            <td>Description</td>
            <th>Email</th>
            <th>Facebook</th>
            <th>Pinterest</th>
            <th>Vimeo</th>
            <th>Twitter</th>
            <th>Our site</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><img width="300" height="300" src="~/img/logo/@Model.Logo" alt="Alternate Text" /></td>
            <td>@Html.Raw(Model.Description)</td>
            <td>@Model.Email</td>
            <td>@Model.Facebook</td>
            <td>@Model.Pinterest</td>
            <td>@Model.Vimeo</td>
            <td>@Model.Twitter</td>
            <td>@Model.Info</td>
        </tr>
    </tbody>
</table>


<div class="row justify-content-center mt-4">
    <a class="btn btn-pinterest" asp-controller="Bios" asp-action="Update" asp-route-id="@Model.Id">Update</a>
</div>

