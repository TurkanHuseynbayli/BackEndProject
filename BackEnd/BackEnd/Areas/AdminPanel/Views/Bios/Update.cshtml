@model Bio
@{
    ViewData["Title"] = "Update";
}

<div class="container bg-white p-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12 ">
            <div class="col-md-8 offset-md-2 mb-3">
                @*<img src="~/img/logo/@Model.HeaderLogo" alt="Alternate Text" />*@
            </div>
            <form method="post" enctype="multipart/form-data">

                <div class="form-row">
                 
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Phono1"></label>
                        <input asp-for="@Model.Phono1" class="form-control" placeholder="Phono1">
                        <span class="text-danger" asp-validation-for="@Model.Phono1"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Phone2"></label>
                        <input asp-for="@Model.Phone2" class="form-control" placeholder="Phono2">
                        <span class="text-danger" asp-validation-for="@Model.Phone2"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Description"></label>
                        <textarea asp-for="@Model.Description"> </textarea>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Address"></label>
                        <input asp-for="@Model.Address" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Address"></span>
                    </div>
                  
                </div>

                <div class="text-center my-3">
                    
                   
                            <div class="form-group">
                                <label asp-for="@Model.Photo"></label>
                                <input asp-for="@Model.Photo" accept="image/*" class="form-control">
                                <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                           
                        
                    </div>
                </div>

                <div class="form-row mb-4">
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Facebook"></label>
                        <input asp-for="@Model.Facebook" class="form-control" placeholder="Facebook">
                        <span class="text-danger" asp-validation-for="@Model.Facebook"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Pinterest"></label>
                        <input asp-for="@Model.Pinterest" class="form-control" placeholder="Facebook">
                        <span class="text-danger" asp-validation-for="@Model.Pinterest"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Vimeo"></label>
                        <input asp-for="@Model.Vimeo" class="form-control" placeholder="Facebook">
                        <span class="text-danger" asp-validation-for="@Model.Vimeo"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Twitter"></label>
                        <input asp-for="@Model.Twitter" class="form-control" placeholder="Facebook">
                        <span class="text-danger" asp-validation-for="@Model.Twitter"></span>
                    </div>
                    <div class="form-group col-md-6 offset-md-3 mb-3">
                        <label asp-for="@Model.Info"></label>
                        <input asp-for="@Model.Info" class="form-control" placeholder="Facebook">
                        <span class="text-danger" asp-validation-for="@Model.Info"></span>
                    </div>
                </div>


                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Index" class="btn btn-info">GO BACK</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .catch(error => {
            console.error(error);
        });
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>


