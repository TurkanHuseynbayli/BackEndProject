@model Testimonial
@{
    ViewData["Title"] = "Update";
}


<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-8 offset-md-2 mb-3">
                    <img src="~/img/testimonial/@Model.Image" alt="Alternate Text" />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Write your name...">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.Description">Description</label>
                        <textarea asp-for="@Model.Description"></textarea>
                        <span class="text-danger" asp-validation-for="@Model.Description"></span>
                    </div>
                </div>

                <div class="text-center">
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input asp-for="@Model.Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Index" class="btn btn-info">Close</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Title'))
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#Description'))
        .catch(error => {
            console.error(error);
        });
</script>



