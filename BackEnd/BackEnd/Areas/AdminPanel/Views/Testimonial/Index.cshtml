@model Testimonial
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Settings</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img width="150" src="~/img/testimonial/@Model.Image" /></td>
                <td><h4>@Model.Name</h4></td>
                <td><p>@Model.Description</p></td>
                <td>
                    <a asp-controller="Testimonial" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="mdi mdi-table-edit"></i>
                    </a>
                </td>

            </tr>
        </tbody>
    </table>
</div>

