@model Testimonial
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
              
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img width="150" src="~/img/testimonial/@Model.Image" /></td>
                <td><h4>@Model.Name</h4></td>
                <td><p>@Html.Raw(Model.Description)</p></td>
                

            </tr>
        </tbody>
    </table>

    <div class="row justify-content-center mt-4">
        <a class="btn btn-pinterest" asp-controller="Testimonial" asp-action="Update" asp-route-id="@Model.Id">Update</a>
    </div>
</div>

