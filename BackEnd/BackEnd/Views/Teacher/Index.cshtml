<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105 ">
    <div class="row">
        <div class="col-xs-12">
            <div class="course-title">
                <h3>search teacher</h3>
            </div>
            <div class="course-form mb-5">
                <form id="search" method="post" asp-controller="Teacher" asp-action="Search">
                    <input type="search" placeholder="Search..." name="search" />
                    <button type="submit">search</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container">

        @await Component.InvokeAsync("Teacher", 12)
    </div>
</div>
