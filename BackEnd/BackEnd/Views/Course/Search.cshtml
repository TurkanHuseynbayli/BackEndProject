@model List<Course>
@{
    ViewData["Title"] = "Search";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses Search</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<div class="row">
    <div class="col-xs-12">
        <div class="course-title">
            <h3>search courses</h3>
        </div>
        <div class="course-form">
            <form id="search" method="post" asp-controller="Course" asp-action="Search">
                <input type="search" placeholder="Search..." name="search" />
                <button type="submit">search</button>
            </form>
        </div>
    </div>
</div>
@if (Model != null)
{
    <div class="row">
        @foreach (Course course in Model)
        {
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-course">
                    <div class="course-img">
                        <a href="course-details.html">
                            <img src="~/img/course/@course.Image" alt="course">
                            <div class="course-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </a>
                    </div>
                    <div class="course-content">
                        <h3><a href="course-details.html">@course.Name</a></h3>
                        <p>@course.Description</p>
                        <a class="default-btn" href="course-details.html">read more</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>NOT FOUND</h3>
}



