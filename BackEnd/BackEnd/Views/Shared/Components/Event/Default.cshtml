@model List<Event>
@{
    int count = 0;
}
<div class="col-md-6 col-sm-12 col-xs-12">

    @foreach (Event events in Model)
{
    if (count % 2 == 0 && count != 0)
    {
        @Html.Raw("</div><div class='col-md-6 col-sm-12 col-xs-12'>")
    }
    <div class="single-event mb-35">
        <div class="event-img">
            <a asp-controller="Event" asp-action="Detail" asp-route-id="@events.Id"><img src="~/img/event/@events.Image" alt="event"></a>
        </div>
        <div class="event-content text-left">
            <h3>@events.Date.Day,@events.Date.ToString("MMMM"),@events.Date.Year</h3>
            <h4><a asp-controller="Event" asp-action="Detail" asp-route-id="@events.Id">@events.Title</a></h4>
            <ul>
                <li><i class="fa fa-clock-o"></i>9.00 AM - 4.45 PM</li>
                <li><i class="fa fa-map-marker"></i>New Yourk City</li>
            </ul>
            <div class="event-content-right">
                <a class="default-btn"asp-controller="Event" asp-action="Detail" asp-route-id="@events.Id">join now</a>
            </div>
        </div>
    </div>
        count++;
    }
    
</div>
